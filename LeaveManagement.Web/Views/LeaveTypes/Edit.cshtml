@model LeaveTypeVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Leave Type</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefaultDays" class="control-label"></label>
                <input asp-for="DefaultDays" class="form-control" />
                <span asp-validation-for="DefaultDays" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mt-3">
                <input type="submit" value="Save Changes" class="btn btn-warning" /> &nbsp;
                <a asp-action="Index" class="btn btn-secondary">Back to List</a> &nbsp;
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark">Leave Type Details</a>
            </div>
        </form>
    </div>
</div>

